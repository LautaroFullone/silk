{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "open-client-terminal",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoExit"],
      "options": { "cwd": "${workspaceFolder}/client" },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "dev-split"
      },
      "problemMatcher": []
    },
    {
      "label": "open-api-terminal",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoExit"],
      "options": { "cwd": "${workspaceFolder}/api" },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "group": "dev-split"
      },
      "problemMatcher": []
    },
    {
      "label": "open-dev-terminals",
      "dependsOn": ["open-client-terminal", "open-api-terminal"],
      "dependsOrder": "parallel",
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
