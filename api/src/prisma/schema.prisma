generator client {
   provider = "prisma-client-js"
}

datasource db {
   provider  = "postgresql"
   url       = env("DATABASE_URL")
   directUrl = env("DIRECT_URL")
}

model Testimonial {
   id          String  @id @default(cuid())
   personName  String
   personRole  String
   description String
   isHighlight Boolean
   isActive    Boolean

   avatarImagePath String?

   createdAt DateTime @default(now())
}

model Post {
   id          String  @id @default(cuid())
   title       String
   author      String
   date        String
   description String
   content     Json
   category    String
   isActive    Boolean

   imageFilePath String?

   createdAt DateTime @default(now())
}
